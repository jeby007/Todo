@import "../global.styl"
.j_layoutWrap
  background #000
  .title
    height: 40px;
    line-height 40px
    margin: 16px;
    color $theme
    display flex
    align-items center
    justify-content center
    font-size 16px
    .logo
      margin-right 8px
      animation rotateLogo 1.5s linear infinite
  .header
    padding 0 20px
    background $theme
    color #fff
    display flex
    justify-content space-between
    .headerRight
      display flex
      align-items center
      justify-content center
      & > div:first-child
        font-size 16px
@keyframes rotateLogo{
  from {
    transform rotate(180deg)
  }
  to {
    transform rotate(360deg)
  }
}